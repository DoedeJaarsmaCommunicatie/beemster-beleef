{% set _logo = Image(theme.theme_mod('custom_logo')) %}
<a class="custom-logo-nav" href="{{ site.link }}">
    <figure class="custom-logo-wrapper">
        {% do action('bdb_pre_custom_logo') %}
        <img alt="{{ _logo.alt|apply_filters('bdb/logo/alt') }}"
             class="custom-logo"
             src="{{ _logo.src|apply_filters('bdb/logo/src') }}">
        {% do action('bdb_post_custom_logo') %}
    </figure>
</a>

{% set _bg = Image(post.get_field('header_image')) %}
<style>
    .front_page-banner {
    background-image: url("{{ _bg.src('large') }}");
    }
</style>
<header class="front_page-banner bg-blue-opaque" role="banner">
    <section class="front_page-banner--body">
        <h1>{{ post.get_field('header_title') }}</h1>
    </section>

    <section class="front_page-banner--footer">
        <a class="button is-green lg:mr-4 mb-4 lg:mb-0" href="{{ get_post_type_archive_link('arrangement') }}">
            {{ __('Bekijk de arrangementen', 'bdb') }}
        </a>
        <a class="button is-white" href="{{ get_post_type_archive_link('location') }}">
            {{ __('Ontdek de highlights', 'bdb') }}
        </a>
    </section>
</header>

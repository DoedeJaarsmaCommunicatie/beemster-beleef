{% set _bg = Image(post.get_field('button_image')) %}
<style>
    .main-content--banner {
        background-image: url("{{ _bg.src('large') }}");
    }
</style>
<aside class="main-content--banner bg-yellow-opaque">
    <div class="main-content--banner--header">
        <h2>
            {{ post.get_field('button_title') }}
        </h2>
    </div>
    <div class="main-content--banner--footer">
        <a class="button is-green"
           href="{{ get_post_type_archive_link('arrangement') }}">
            {{ __('Bekijk de arrangementen', 'bdb') }}
        </a>
    </div>
</aside>

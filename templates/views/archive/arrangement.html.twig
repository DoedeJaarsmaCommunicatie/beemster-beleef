{% extends 'layouts/app.twig' %}

{% block content %}
<div class="bg-green-opaque">
    <div class="container mx-auto">
        <section class="flex">
            <aside class="w-1/3">
                <strong>Thema's</strong>

                <ul>
                    <li><label for="theme[1]"><input type="checkbox" id="theme[1]" name="theme[1]"> Thema #1</label></li>
                    <li><label for="theme[2]"><input type="checkbox" id="theme[2]" name="theme[2]"> Thema #2</label></li>
                    <li><label for="theme[3]"><input type="checkbox" id="theme[3]" name="theme[3]"> Thema #3</label></li>
                    <li><label for="theme[4]"><input type="checkbox" id="theme[4]" name="theme[4]"> Thema #4</label></li>
                </ul>
            </aside>
            <main class="w-2/3">
                {% for post in posts %}
                    {{ include('partials/tease/arrangement.html.twig', { post: post}, with_context = false) }}
                {% endfor %}
            </main>
        </section>
    </div>
</div>
{% endblock %}
